extends layout

block navigation
    div(class="navbar navbar-default navbar-fixed-top")
        div(class="container")
            div(class="navbar-collapse collapse navigation-links")
                ul(class="nav navbar-nav navbar-right")
                    li
                        a(class="navbar-logo-holder navigation-logo navigation-logo-main" href="/") AES v0.0.1

block body
    div(class="container main-container")

        form(class="form-signin" action="/login" method="post")
            h2(class="form-signin-heading") Please sign in
            input(type="text" class="form-control" placeholder="Email address" autofocus)
            input(type="password" class="form-control" placeholder="Password")
            label(class="checkbox") Remember me
                input(type="checkbox" value="remember-me")

            button(class="btn btn-lg btn-primary btn-block" type="submit") Sign in

        div(class="col-md-2 col-md-offset-5")
            button(type="button" class="btn btn-md btn-primary btn-block" data-toggle="modal" data-target="#myModal") Register

        div(id="myModal" class="modal fade")
            div(class="modal-dialog")
                div(class="modal-content")
                    div(class="modal-header")
                        button(type="button" class="close" data-dismiss="modal" aria-hidden="true") &times;
                        h4(class="modal-title") Register

                    div(class="modal-body")
                        div(ng-controller="RegistrationCtrl" ng-submit="register()" class="col-md-4 col-lg-offset-4 form-holder")
                            form(class="form-horizontal form-registration" role="form")
                                div(class="form-group")
                                    input(type="text" ng-model="user.username" class='form-control' placeholder='Username')
                                div(class="form-group")
                                    input(type="email" ng-model="user.email" class='form-control' placeholder='Email address')
                                div(class="form-group")
                                    input(type="password" ng-model="user.password" class='form-control' placeholder='Password')

                                button(ng-click="reset()" class="btn btn-sm btn-primary btn-block") Reset
                                button(type="submit" class="btn btn-sm btn-primary btn-block btn-register") Register


    script(src="js/lib/jquery.min.js")
    script(src="js/lib/bootstrap.min.js")
    script(src="js/lib/angular/angular.js")
    script(src="js/app.js")
    script(src="js/services.js")
    script(src="js/controllers.js")
    script(src="js/filters.js")
    script(src="js/directives.js")

block footer
    footer
         div(class="footer")
            div(class="footer-text-holder")
                font(class="copyright") Logged in? #{ logged }
                font(class="pipe") |
                font(class="name") AES v0.0.1
